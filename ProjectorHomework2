package main

import "fmt"

type Animal struct {
	Name string
}

type Cage struct {
	Animal Animal
}

func (c *Cage) AddAnimal(animal Animal) {
	c.Animal = animal
}

func (c *Cage) InfoCage() {
	fmt.Printf("Клітка звіра: %s\n", c.Animal.Name)
}

type Zookeeper struct {
	Name string
}

func (z *Zookeeper) CollectAnimal(animal Animal) {
	cage := Cage{Animal: animal}
	fmt.Printf("%s закриває звіра %s у клітку\n", z.Name, animal.Name)
	cage.InfoCage()
}

func main() {
	fmt.Println("Звірі втекли з кліток!")

	animal1 := Animal{"Лев"}
	animal2 := Animal{"Тигр"}
	animal3 := Animal{"Зебра"}
	animal4 := Animal{"Жираф"}
	animal5 := Animal{"Мавпа"}

	zookeeper := Zookeeper{"Maксим"}

	zookeeper.CollectAnimal(animal1)
	zookeeper.CollectAnimal(animal2)
	zookeeper.CollectAnimal(animal3)
	zookeeper.CollectAnimal(animal4)
	zookeeper.CollectAnimal(animal5)
}
